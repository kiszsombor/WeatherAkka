<UserControl x:Class="WeatherAkka.Views.InputWindows.InputWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WeatherAkka.Views.InputWindows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="32,36,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="194" Height="19"/>
        <Button Content="Fájlba ír" Command="{Binding PrintCurrentWeather}" HorizontalAlignment="Left" Margin="244,35,0,0" VerticalAlignment="Top" Width="60"/>
    </Grid>
</UserControl>
